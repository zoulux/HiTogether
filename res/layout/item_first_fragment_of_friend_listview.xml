<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.lyy.hitogether.view.CircleImageView
            android:id="@+id/id_first_fragment_of_friend_list_avartar"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/default_avarter" />

        <TextView
            android:id="@+id/id_first_fragment_of_friend_list_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/id_first_fragment_of_friend_list_avartar"
            android:text="乐友游" />

        <TextView
            android:id="@+id/id_first_fragment_of_friend_list_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_first_fragment_of_friend_list_friend_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/id_first_fragment_of_friend_list_avartar"
            android:text="11:11" />
    </RelativeLayout>

    <TextView
        android:id="@+id/id_first_fragment_of_friend_list_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="今天是个好日子，有没有想去玩的啊！！！" />

    <com.lyy.hitogether.view.NoScrollGridView
        android:id="@+id/id_first_fragment_of_friend_list_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="3dip"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_first_fragment_of_friend_list_switch_praise"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/no_praise" />

        <TextView
            android:id="@+id/id_first_fragment_of_friend_list_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_first_fragment_of_friend_list_switch_praise"
            android:gravity="center"
            android:text="20" />

        <Button
            android:id="@+id/id_first_fragment_of_friend_list_talk_to_friend_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:text="聊天" />
    </RelativeLayout>

</LinearLayout>